
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/DMiravalle/Inventario/Inventarios.js"></script>

<div class="jumbotron">
    <h2><b class="textLabel">Gestion de inventario</b></h2>

    <div class="ibox-content">
        <div role="form" class="float-right" style="align-items">

            <input type="button" id="btnAdicionar" class="col-xs-1 btn btn-w-m btn-primary" value="Adicionar" />

        </div>
    </div>

</div>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">

        @*<%-- Tabla --%>*@
        <div class="ibox-content">
            <table class="table table-condensed" id="tbInventario">
                <thead>
                    <tr>
                        <th>Cantidad</th>
                        <th data-breakpoints="xs sm">Fecha registro</th>
                        <th data-breakpoints="xs sm">Lote</th>
                        <th data-breakpoints="xs sm">Sede</th>
                        <th data-breakpoints="xs sm">Producto</th>
                    </tr>
                </thead>
                <tbody id="tbodyInventario"></tbody>
            </table>
        </div>

    </div>
</div>

@*<%--Modal--%>*@
<div id="modalAdcUsr" class="modal" runat="server">
    <div class="contentModal">

        <div class="modal-header">
            <h4 class="control-label align-text-top">Adición de registros</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="color: white">&times;</span></button>
        </div>

        <div class="modal-body">

            <div class="row marginModal">

                <div class="col-xs-12 col-sm-6 col-md-6 sinpadding">
                    <label for="txtNombreProducto" class="col-sm-12 control-label textLabel">Producto</label>
                    <input type="text" class="form-control textLabel" id="txtNombreProducto" name="txtNombreProducto" />
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6 sinpadding">
                    <label for="txtLoteProducto" class="col-sm-12 control-label textLabel">Lote producto</label>
                    <input type="date" class="form-control textLabel" id="txtLoteProducto" name="txtLoteProducto" />
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6 sinpadding">
                    <label for="txtSede" class="col-sm-12 control-label textLabel">Sede</label>
                    <input type="text" class="form-control textLabel" id="txtSede" name="txtSede" />
                </div>

            </div>

        </div>

        <div class="modal-footer">
            <div class="ibox-content">
                <div role="form" class="form-inline " style="align-items;">
                    <input type="button" class="btn-delete btn btn-w-m" id="btnCancelar" value="Cancelar" />
                    <input type="button" class="btn-create btn btn-w-m" id="btnCrear" value="Crear" />
                </div>
            </div>
        </div>

    </div>
